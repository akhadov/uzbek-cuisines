{
  "ConnectionStrings": {
    "Database": "Host=postgres;Port=5432;Database=cuisines;Username=postgres;Password=web@1234;Include Error Detail=true",
    //"Database": "Host=localhost;Port=5432;Database=cuisines;Username=postgres;Password=postgres;Include Error Detail=true",
    "Cache": "redis:6379"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Seq"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "ServerUrl": "http://seq:5341" }
      }
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },
  "Jwt": {
    "Secret": "super-duper-secret-value-that-should-be-in-user-secrets",
    "Issuer": "cuisines",
    "Audience": "developers",
    "ExpirationInMinutes": 60
  },
  "BackgroundJobs": {
    "Outbox": {
      "Schedule": "0/15 * * * * *"
    }
  }
}
